{
  "name": "middle",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    // Middle 作为 Host（只拉 remote，用于自己开发）
    "dev:host": "vite --config vite.config.js",
    "build:host": "vite build --config vite.config.js",
    "preview:host": "vite preview --config vite.config.js --port 5174",
    // Middle 作为 Remote（暴露给 shell 使用）
    "dev:remote": "vite --config vite.config.remote.js",
    "build:remote": "vite build --config vite.config.remote.js",
    "preview:remote": "vite preview --config vite.config.remote.js --port 5176"
  },
  "dependencies": {
    "vue": "^3.4.21",
    "vue-router": "^4.3.0",
    "element-plus": "^2.6.3",
    "@element-plus/icons-vue": "^2.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "@originjs/vite-plugin-federation": "^1.3.2",
    "vite": "^5.2.0"
  }
}